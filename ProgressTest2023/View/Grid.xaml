        <BoxView Color="Green"/>
        <Label Text="Row 0 Column 0" HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        
        <BoxView Grid.Column="1"  Color="Aqua"/>
        <Label Grid.Column="1" Text="Row 0 Column 1" HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        
        <BoxView Grid.Row="1"  Color="Teal"/>
        <Label Grid.Row="1" Text="Row 1 Column 0" HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        <BoxView Grid.Row="1" Grid.Column="1"  Color="Yellow"/>
        <Label Grid.Column="1" Grid.Row="1" Text="Row 1 Column 1" HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        <BoxView Grid.Row="2" Grid.ColumnSpan="2"  Color="Red"/>
        <Label Grid.Row="2" Grid.ColumnSpan="2" Text="Row 2 Column 0 and 1" HorizontalOptions="Center"
